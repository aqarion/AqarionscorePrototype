  <footer>
    <span>AQARIONZ Core Prototype · FastAPI backend at <code>http://127.0.0.1:8000</code></span>
    <span>Endpoints: <code>/health</code>, <code>/signal</code></span>
  </footer>

  <script>
    const sendBtn = document.getElementById('send-btn');
    const statusText = document.getElementById('status-text');
    const consoleEl = document.getElementById('ouija-console');
    const harmonicsRow = document.getElementById('harmonics-row');
    const intentText = document.getElementById('intent-text');
    const logIdText = document.getElementById('logid-text');

    const mapChannel = document.getElementById('map-channel');
    const mapMood = document.getElementById('map-mood');
    const mapPhase = document.getElementById('map-phase');
    const mapEnergy = document.getElementById('map-energy');
    const mapCoherence = document.getElementById('map-coherence');
    const mapNotes = document.getElementById('map-notes');

    async function transmit() {
      const channel = document.getElementById('channel').value;
      const payload = document.getElementById('payload').value.trim();
      const tagsRaw = document.getElementById('tags').value.trim();

      if (!payload) {
        alert('Please provide a payload for AQARIONZ.');
        return;
      }

      const tags = tagsRaw ? tagsRaw.split(',').map(t => t.trim()).filter(Boolean) : null;

      sendBtn.disabled = true;
      statusText.textContent = 'Transmitting…';

      const body = { channel, payload };
      if (tags && tags.length) body.tags = tags;

      try {
        const res = await fetch('http://127.0.0.1:8000/signal', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body),
        });

        if (!res.ok) {
          throw new Error('HTTP ' + res.status);
        }

        const data = await res.json();

        // OuijaAI console
        consoleEl.innerHTML =
          '<span class="prompt">&gt; </span><span class="value">' +
          data.narrative +
          '</span>';

        // Harmonics chips
        harmonicsRow.innerHTML = '';
        if (Array.isArray(data.harmonics) && data.harmonics.length) {
          data.harmonics.forEach((h, idx) => {
            const chip = document.createElement('div');
            chip.className = 'harmonic-chip';
            chip.textContent = 'H' + (idx + 1) + ' = ' + h.toFixed(3);
            harmonicsRow.appendChild(chip);
          });
          harmonicsRow.style.display = 'flex';
        } else {
          harmonicsRow.style.display = 'none';
        }

        intentText.textContent = data.intent || 'unknown';
        logIdText.textContent = data.log_id || '–';

        // Sovereignty Map
        mapChannel.textContent = data.channel || channel;
        mapPhase.textContent = 'Phase‑0 · Prototype';

        const length = payload.length;
        let mood = 'neutral';
        if (length < 40) mood = 'whisper';
        else if (length < 160) mood = 'focused';
        else mood = 'flood';

        mapMood.textContent = mood;
        mapEnergy.textContent = (data.harmonics && data.harmonics[0] != null)
          ? data.harmonics[0].toFixed(2)
          : '–';

        mapCoherence.textContent = (data.harmonics && data.harmonics.length >= 2)
          ? data.harmonics[1].toFixed(2)
          : '–';

        mapNotes.textContent = 'Trace ' + (data.log_id || '–') +
          ' registered as ' + data.intent + ' on ' + (data.channel || channel) + ' channel.';

        statusText.textContent = 'Trace logged successfully.';
      } catch (err) {
        console.error(err);
        statusText.textContent = 'Error talking to backend.';
        consoleEl.innerHTML =
          '<span class="prompt">&gt; </span><span class="value">Core unreachable. ' +
          'Make sure FastAPI is running on http://127.0.0.1:8000.</span>';
        harmonicsRow.style.display = 'none';
      } finally {
        sendBtn.disabled = false;
      }
    }

    sendBtn.addEventListener('click', transmit);
  </script>
</body>
</html>
```

